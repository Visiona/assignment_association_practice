<H2>Create new post</H2>

<% if @post.errors.any? %>
  <%= @post.errors.full_messages %>
<% end %>


<%= form_for @post do |f| %>
  <%= f.text_field :title %><br>
  <%= f.text_area :body, size: "40x40"  %><br>
  <p>Chose tags for the post</p>
  <%= f.collection_check_boxes(:tag_ids,
                               Tag.all,
                               :id,
                               :name)  %><br>
  <p>Chose category for the post</p>
  <%= f.collection_radio_buttons(:category_id,
                               Category.all,
                               :id,
                               :name)  do |b| %>
    <%= b.label(:class => "col-md-4"){b.radio_button + "  " + b.text}  %><br>
  <% end %><br>
  <%= f.submit "Create Post" %>
<% end %>
